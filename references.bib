	shortjournal = {Desalination},
	author = {Wildebrand, Carsten and Glade, Heike and Will, Stefan and Essig, Manfred and Rieger, Jens and Büchner, Karl-Heinz and Brodt, Gregor},
	urldate = {2023-07-10},
